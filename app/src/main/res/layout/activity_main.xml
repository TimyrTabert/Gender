<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#635F5E"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/manlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"

            >

            <ImageView
                android:id="@+id/imgVM"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/man" />

            <TextView
                android:id="@+id/textVM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Мужчина"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/womanlayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imgVFM"
                android:layout_width="150sp"
                android:layout_height="150sp"
                android:src="@drawable/woman" />

            <TextView
                android:id="@+id/textVFM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="Женщина"
                android:textColor="#FFFFFF"
                android:textSize="30sp" />

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="1sp"
        android:layout_height="10sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#223F87"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVVec"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="      Вес        "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EditVes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="50"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_width="30sp"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#223F87"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVRost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="      Рост      "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EditRost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:minHeight="48dp"
                android:text="150"
                android:textColor="#FFFFFF" />
        </LinearLayout>

        <View
            android:layout_width="30sp"
            android:layout_height="1sp" />

        <LinearLayout
            android:layout_width="120dp"
            android:layout_height="75dp"
            android:layout_gravity="center"
            android:background="#223F87"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textVOSRAST"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="      Возраст      "
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/EditLet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="20"
                android:textColor="#FFFFFF"
                tools:ignore="TouchTargetSizeCheck" />
            >
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="1sp"
        android:layout_height="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/Button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="#223F87"
            android:gravity="center"
            android:text="      Расчитать      "
            android:textColor="#FFFFFF"
            android:textSize="30sp" />
    </LinearLayout>


</LinearLayout>